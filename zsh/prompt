
# Some fancy git stuff for the prompt
# Idea taken from
#
# http://www.simplisticcomplexity.com/2008/03/13/show-your-git-branch-name-in-your-prompt/
function _prompt_git_branch {
    git branch --no-color 2> /dev/null | sed -e '/^[^*]/d' -e 's/* \(.*\)/%{'"$FG[111]"'%}î‚ %{'"$FG[33]"'%}\1/'
}

integer amime
case $USER; in
    sterling)
        amime=10
        ;;
    *)
        amime=11
        ;;
esac

typeset -i 10 hostnumber
((hostnumber = 0x$(hostname | crc32 /dev/stdin) % 6))

typeset -i 10 ostype
MAC_SPACE=""
case `uname`; in
    Darwin*)
        ostype=`xyz_index 0 5 5`
        ((ostype = $ostype - $hostnumber * 6))
        MAC_SPACE=""
        ;;

    *)
        ostype=`xyz_index 2 5 0`
        ((ostype = $ostype + $hostnumber))
        ;;

esac

. ~/.zshrc.local
if [ "$SAFEPLACE" = "" ]; then
    HOSTCOLOR="$FG[160]"
elif [ "$SAFEPLACE" = "meh" ]; then
    HOSTCOLOR="$FG[226]"
else
    HOSTCOLOR="$FG[$ostype]"
fi

function _prompt_shorten_hostname {
    SH=$(hostname -s)
    case $SH in
        sandbox-sterling-*)
            echo ss${SH##*-}
            ;;

        Sterlings-MBP)
            echo ZipMBP
            ;;

        *)
            echo $SH
    esac
}

function _prompt_clockface {
    HOUR=$(date +'%I')
    MINUTE=$(date +'%M')
    CLOCKFACES00=(ğŸ• ğŸ•‘ ğŸ•’ ğŸ•“ ğŸ•” ğŸ•• ğŸ•– ğŸ•— ğŸ•˜ ğŸ•™ ğŸ•š ğŸ•›)
    CLOCKFACES30=(ğŸ•œ ğŸ• ğŸ• ğŸ•Ÿ ğŸ•  ğŸ•¡ ğŸ•¢ ğŸ•£ ğŸ•¤ ğŸ•¥ ğŸ•¦ ğŸ•§)

    if (( $MINUTE <= 15)); then
        echo $CLOCKFACES00[$HOUR]
    elif (( $MINUTE <= 45)); then
        echo $CLOCKFACES30[$HOUR]
    else
        MODIFIED_HOUR=$(( ($HOUR + 1) % 12 ))
        echo $CLOCKFACES00[$MODIFIED_HOUR]
    fi
}

function _kubecolor {
    KUBECOLOR="$FG[171]"
    case "$KUBECONFIG" in
        *prod*)
            KUBECOLOR=$FG[166]
            ;;
        *stg*)
            KUBECOLOR=$FG[64]
            ;;
        *dev*)
            KUBECOLOR=$FG[40]
            ;;
    esac
    echo $KUBECOLOR
}

function _kubeconfig {
    if [[ -n "$KUBECONFIG" ]]; then
        echo "[$(basename "$KUBECONFIG")]"
    fi
}

if [ "$ASCIINEMA_REC" = 1 ]; then
    PROMPT=$'%{$BG[236]$FG[39]%}%1d%{$FG[33]%}$(_prompt_git_branch)%{$FG[7]%}%# %{$BG[0]$FG[236]%}î‚´ %{$FX[reset]%}'
else
    PROMPT=$'%{$BG[142]$FG[0]%} $(_prompt_clockface) %T %{$BG[236]$FG[142]%}î‚´ %{$BG[236]$FG[$amime]%}%n%{$HOSTCOLOR%}@%m %{$FG[39]%}%1d%{$FG[33]%}$(_prompt_git_branch)%{$FG[7]%} %{$(_kubecolor)%}$(_kubeconfig)%{$FG[7]%}%# %{$BG[0]$FG[236]%}î‚´$MAC_SPACE %{$FX[reset]%}'
fi

export PROMPT

#export PROMPT=$'[%*] %{\e[01;36m%}%n@%m %{\e[01;34m%}%1d$(_prompt_git_branch)%# %{\e[00m%}'

