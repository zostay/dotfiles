if [ -n "$TMUX" ]; then                                                                               
    function refresh-ssh-auth-sock() {
        export $(tmux show-environment | grep "^SSH_AUTH_SOCK")                                       
    }                                                                                                 
else                                                                                                  
    function refresh-ssh-auth-sock() { }
fi

function preexec() {
    refresh-ssh-auth-sock
}

