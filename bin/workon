#!/bin/zsh

NAME=$1
DIR=$2

function initialize_session {
    SESSION_NAME="$1"
    SESSION_DIR="$2"
    SHORT_DIR=$( basename $( dirname "$SESSION_DIR" ) )

    add-editor "$SESSION_NAME" "$SESSION_DIR"

    case $SHORT_DIR in
        raku)
            add-repl "$SESSION_NAME" "$SESSION_DIR"
            ;;
    esac

    tmux select-window -t "$SESSION_NAME:0"
}

SHORTEN=0
if [[ "$NAME" == "" ]]; then
    NAME=stuff
else
    SHORTEN=1
fi

if [[ "$DIR" == "" ]]; then
    if [[ "$NAME" != "stuff" ]]; then
        DIR="$NAME"
    else
        DIR="$HOME"
    fi
fi

if (( $SHORTEN )); then
    # workon 0/dotfiles => dotfiles
    NAME=$( basename $NAME )
fi

if [[ "${DIR:0:1}" != "/" ]]; then
    if [[ -d "$HOME/projects/$DIR" ]]; then
        DIR="$HOME/projects/$DIR"
    elif [[ -d "$HOME/projects/go/src/github.com/$DIR" ]]; then
        DIR="$HOME/projects/go/src/github.com/$DIR"
    elif [[ -d "$PWD/$DIR" ]]; then
        DIR="$PWD/$DIR"
    else
        DIR="$HOME"
    fi
fi

NAME="${NAME//\./-}"

if [[ -n "$TMUX" ]] && tmux display-message -p '#S' | grep "^$NAME$" >/dev/null; then
    echo "This is the [$NAME] session!";
else
    if ! tmux has-session -t "$NAME" &>/dev/null; then
        tmux new-session -d -c "$DIR" -s "$NAME"
        initialize_session "$NAME" "$DIR"
    fi

    if [[ -n "$TMUX" ]]; then
        tmux switch-client -t "$NAME"
    else
        tmux attach-session -t "$NAME"
    fi
fi
