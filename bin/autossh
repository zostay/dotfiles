#!/bin/zsh

if [ "X$1" = "X" ]; then
    echo "usage `basename $0` <host>"
    exit 1
fi

if [ "$1" = "-n" ]; then
    TMUX_NAME="$2";
    shift; shift;
else
    TMUX_NAME="auto";
fi

export AUTOSSH_PATH=/usr/bin/ssh
exec /usr/local/bin/autossh -M0 -x -t "$@" "tmux new -s $TMUX_NAME || tmux attach -d -t $TMUX_NAME"
