#!/bin/zsh

if [[ -n "$IN_DOTFILES_CONTAINER" ]]; then
    /usr/bin/perl "$@"
else
    USER_ARG="-u $UID"
    EXTRA_BIND=""
    if [[ $(uname) == 'Darwin' ]]; then
      USER_ARG=""
      EXTRA_BIND="--mount=type=bind,src=$HOME,dst=$HOME"
    fi

    docker run -it \
        $EXTRA_BIND \
        --mount "type=bind,src=$HOME,dst=/home/sterling" \
        --env IN_DOTFILES_CONTAINER=1 \
        $USER_ARG \
        zostay/dotfiles-perl \
        perl "$@"
fi

# vim: ts=4 sts=4 sw=4
